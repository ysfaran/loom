  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.13.10",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.2"
