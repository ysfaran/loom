{
  "name": "cli",
  "projectType": "application",
  "sourceRoot": "cli/src",
  "root": "cli",
  "implicitDependencies": ["core", "renderer-vite-react"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @loom/cli build"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @loom/cli typecheck"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "continuous": true,
      "dependsOn": ["build", "^build"],
      "options": {
        "command": "node cli/dist/cli.js dev"
      }
    },
    "loom": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "^build"],
      "options": {
        "command": "node cli/dist/cli.js"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "^build"],
      "options": {
        "command": "pnpm --filter @loom/cli test"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @loom/cli clean"
      }
    }
  }
}
