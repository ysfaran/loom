{
  "name": "@loom/cli",
  "version": "0.1.0",
  "description": "Loom CLI",
  "license": "MIT",
  "private": true,
  "type": "module",
  "bin": {
    "loom": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@loom/core": "workspace:*",
    "@loom/renderer-astro": "workspace:*",
    "@loom/renderer-vite-react": "workspace:*",
    "commander": "^13.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.18"
  }
}
